<div class="container">    
    <ul class="list-group list-group-flush list-unstyled" id="elementCategory">
        <% if(categories.length > 0) 
            {
                categories.forEach( (category, index) => { %>
                    
                    <li class="list-group-item d-flex justify-content-between align-items-center" >              
                        <%= category.title %>
                        <span class="badge badge-light badge-pill" >X</span>                    
                    </li>

                    
                <% });
            } 
        else { %>                
            <li>
                <p class="h4" >No category found</p>
            </li>                
        <% } %>
    </ul>    
</div>    