<form role="form">
    <div class="form-group row">
        <label class="col-lg-3 col-form-label form-control-label">Full name</label>
        <div class="col-lg-9">
            <input class="form-control" type="text" value="<%= user.fullname %>">
        </div>
    </div>    
    <div class="form-group row">
        <label class="col-lg-3 col-form-label form-control-label">Email</label>
        <div class="col-lg-9">
            <input class="form-control" type="email" value="<%= user.email %>">
        </div>
    </div>    
    <div class="form-group row">
        <label class="col-lg-3 col-form-label form-control-label">Old Password</label>
        <div class="col-lg-9">
            <input class="form-control" type="password">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-3 col-form-label form-control-label">New Password</label>
        <div class="col-lg-9">
            <input class="form-control" type="password">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-3 col-form-label form-control-label">Confirm New password</label>
        <div class="col-lg-9">
            <input class="form-control" type="password">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-3 col-form-label form-control-label"></label>
        <div class="col-lg-9">
            <input type="reset" class="btn btn-secondary" value="Cancel">
            <input type="button" class="btn btn-primary" value="Save Changes">
        </div>
    </div>
</form>